# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/cumpliros?schema=public"

# JWT Configuration
# SECURITY: Generate strong secrets for production using: openssl rand -base64 32
# These values are INSECURE defaults for development only
JWT_SECRET="CHANGE_ME_IN_PRODUCTION_USE_OPENSSL_RAND"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="CHANGE_ME_IN_PRODUCTION_USE_OPENSSL_RAND"
JWT_REFRESH_EXPIRES_IN="30d"

# App
PORT=3001
NODE_ENV="development"
CORS_ORIGINS="http://localhost:3000"

# Storage (S3 compatible)
# SECURITY: Change these credentials in production
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_BUCKET="cumpliros-docs"
S3_REGION="us-east-1"

# Email (Resend)
# Get your API key from https://resend.com
RESEND_API_KEY="re_xxxxxxxxxxxx"
EMAIL_FROM="CumpliRos <noreply@cumpliros.com>"

# Redis (for jobs/cache)
REDIS_URL="redis://localhost:6379"
