# Docker Compose Environment Variables
# SECURITY: Copy this file to .env.docker and configure for your environment
# For production, use strong passwords generated with: openssl rand -base64 24

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD
POSTGRES_DB=cumpliros
POSTGRES_PORT=5432

# Redis (optional - leave empty for no password in development)
REDIS_PASSWORD=
REDIS_PORT=6379

# MinIO (S3-compatible storage)
MINIO_ROOT_USER=cumpliros_minio
MINIO_ROOT_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
